@model ISSCFG.Models.ViewModels.BasketViewModel
@using ISSCFG.Models.ViewModels
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Basket";
}
<h2 class="question">@Localizer["Title"]</h2>
<hr>
<div class="container">    
    @foreach(ItemViewModel item in Model)
    {
    <div class="row course">
        <div class="col-md-2">
            @if(!string.IsNullOrWhiteSpace(item.ImagePath))
            {
                <img src="@item.ImagePath" alt="@item.Description" width="160" asp-append-version="true">
            }
        </div>
        <div class="col-md-8">
            <h4>@item.Description</h4>
            <author>by @item.Producer (@item.Code)</author>
        </div>
        <div class="col-md-2 d-flex align-items-center">
            @if(!string.IsNullOrWhiteSpace(item.Url))
            {
                <a class="btn btn-outline-primary" href="@item.Url">Dettagli</a>
            }
        </div>
    </div>
    }
</div>
<div class="container">       
    <a class="nav-link text-dark" asp-controller="Cfg" asp-action="ToStep01">
        <button type="button" class="btn btn-lg btn-link">@Localizer["Restart"]</button>
    </a>      
</div>