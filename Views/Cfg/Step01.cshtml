@model ISSCFG.Models.ViewModels.UserInputViewModel
@using ISSCFG.Models.Enums
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Step 01";
}

<h2 class="question">@Localizer["IntendedUseQuestion"]</h2>
<hr>
<div class="container">
    <div class="card-deck mb-3 text-center">
    <div class="card mb-2 box-shadow">
        <div class="card-header">
            <i class="fas fa-5x fa-laptop"></i>
        </div>
        <div class="card-body">
            @Localizer["ComputerExtensionExplanation"]
            <a class="nav-link text-dark" asp-area="" asp-controller="Cfg" asp-action="CompleteStep01" asp-route-step01="@Step01.ComputerExtension" asp-route-id="@Model.Id">
                <button type="button" class="btn btn-lg btn-block btn-outline-primary">@Localizer["ComputerExtension"]</button> 
            </a>
        </div>
    </div>
    <div class="card mb-2 box-shadow">
        <div class="card-header">
            <i class="fab fa-5x fa-intercom"></i>
        </div>
        <div class="card-body">            
            @Localizer["StandaloneExplanation"]
            <a class="nav-link text-dark" asp-area="" asp-controller="Cfg" asp-action="CompleteStep01" asp-route-step01="@Step01.StandaloneMeetingRoom" asp-route-id="@Model.Id">
                <button type="button" class="btn btn-lg btn-block btn-primary">@Localizer["Standalone"]</button>
            </a>
        </div>
    </div>
</div>
